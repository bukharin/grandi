{
	"name": "grandi",
	"version": "0.1.0",
	"description": "Node.JS native bindings to the Newtek NDI SDK.",
	"homepage": "https://github.com/tux-tn/grandi#readme",
	"keywords": [
		"Newtek",
		"NDI",
		"network",
		"device",
		"interface"
	],
	"author": "Sarhan Aissi <npm@tux.tn>",
	"license": "Apache-2.0",
	"files": [
		"binding.gyp",
		"dist",
		"lib",
		"LICENSE",
		"NOTICE",
		"README.md",
		"prebuilds"
	],
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"gypfile": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/tux-tn/grandi.git"
	},
	"bugs": {
		"url": "https://github.com/tux-tn/grandi/issues"
	},
	"dependencies": {
		"cross-spawn": "7.0.6",
		"cross-zip": "4.0.1",
		"execa": "9.6.0",
		"got": "14.6.2",
		"node-gyp-build": "^4.8.4",
		"shelljs": "0.10.0",
		"tmp": "0.2.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.3",
		"@types/bindings": "^1.5.5",
		"@types/cross-zip": "^4.0.2",
		"@types/node": "^24.10.0",
		"@types/shelljs": "^0.8.17",
		"@types/tmp": "^0.2.6",
		"prebuildify": "^5.0.1",
		"shx": "0.4.0",
		"tsdown": "^0.16.0",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"preinstall": "node dist/download.mjs",
		"install": "node-gyp-build",
		"prebuild:download": "node dist/download.mjs",
		"build": "tsdown",
		"prebuild": "prebuildify --napi --strip",
		"test": "node scratch/scratchVersion.js",
		"format": "biome format",
		"lint": "biome lint",
		"clean": "shx rm -rf ndi build"
	},
	"engines": {
		"node": ">=20.9.0"
	}
}
