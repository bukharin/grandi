{
	"name": "grandi",
	"version": "0.1.0",
	"description": "Node.JS native bindings to the Newtek NDI SDK.",
	"homepage": "https://github.com/tux-tn/grandi#readme",
	"keywords": [
		"Newtek",
		"NDI",
		"network",
		"device",
		"interface"
	],
	"author": "Tux-TN",
	"license": "Apache-2.0",
	"main": "index.js",
	"gypfile": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/tux-tn/grandi.git"
	},
	"bugs": {
		"url": "https://github.com/tux-tn/grandi/issues"
	},
	"dependencies": {
		"bindings": "1.5.0",
		"cross-spawn": "7.0.3",
		"cross-zip": "4.0.0",
		"execa": "5.1.1",
		"got": "13.0.0",
		"shelljs": "0.8.5",
		"tmp": "0.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.3",
		"shx": "0.3.4"
	},
	"scripts": {
		"install": "node ndi.mjs",
		"build": "node-gyp rebuild",
		"build:linux-arm": "CXX=arm-linux-gnueabihf-g++ node-gyp rebuild --arch\"arm\" --target_arch=\"arm\"",
		"build:linux-arm64": "CXX=aarch64-linux-gnu-g++ node-gyp rebuild --arch\"arm64\" --target_arch=\"arm64\"",
		"build:linux-x64": "CXX=x86_64-linux-gnu-g++ node-gyp rebuild --arch\"x64\" --target_arch=\"x64\"",
		"test": "node scratch/scratchVersion.js",
		"format": "biome format",
		"lint": "biome lint",
		"clean": "shx rm -rf ndi build"
	}
}
